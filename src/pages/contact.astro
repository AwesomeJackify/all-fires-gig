---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

import config from "../config.json";
---

<Layout title={config.businessName}>
  <section class="py-16 px-4">
    <div class="max-w-screen-xl mx-auto">
      <div
        class="grid grid-cols-4 gap-16 place-items-center max-md:grid-cols-1"
      >
        <div class="flex flex-col col-span-2 gap-8">
          <h1 class="text-7xl max-md:text-6xl">Get In Touch</h1>
          <p class="font-light text-2xl">
            We'd love to hear from you! Whether you have a question, need more
            information, or want to discuss how we can help with your fire
            protection needs, don't hesitate to reach out.
          </p>
        </div>
        <div
          class="grid grid-cols-2 w-full col-span-2 gap-8 max-md:grid-cols-1"
        >
          <div class="flex flex-col gap-2">
            <Icon name="bxs:direction-right" class="text-6xl text-primary" />
            <h1 class="font-bold text-xl">Our Address</h1>
            <p>{config.address}</p>
          </div>
          <div class="flex flex-col gap-2">
            <Icon name="bxs:phone" class="text-6xl text-primary" />
            <h1 class="font-bold text-xl">Our Contact Info</h1>
            <div class="flex flex-col">
              <a href={config.phone.url} class="link link-hover"
                >{config.phone.name}</a
              >
              <a href={config.email.url} class="link link-hover"
                >{config.email.name}</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="h-[500px] w-full" id="map"></div>
  </section>
  <section class="py-16">
    <div class="max-w-screen-xl mx-auto w-full px-4">
      <div
        class="grid grid-cols-3 w-full place-items-center gap-16 max-md:grid-cols-1"
      >
        <h1 class="text-6xl">Send us an email</h1>
        <form
          name="contact"
          data-netlify="true"
          class="col-span-2 w-full flex flex-col gap-4 max-md:col-span-1"
        >
          <div
            class="grid grid-cols-2 gap-16 max-md:gap-4 w-full max-md:grid-cols-1"
          >
            <div class="flex flex-col gap-4">
              <div class="flex flex-col gap-1">
                <label class="text-xl">Full Name</label>
                <label class="input input-bordered flex items-center gap-2">
                  <Icon name="mdi:user" class="text-3xl" />
                  <input
                    type="text"
                    class="grow"
                    name="name"
                    placeholder="Enter your name..."
                  />
                </label>
              </div>
              <div class="flex flex-col gap-1">
                <label class="text-xl">Email Address</label>
                <label class="input input-bordered flex items-center gap-2">
                  <Icon name="mdi:email" class="text-3xl" />
                  <input
                    type="text"
                    class="grow"
                    name="email"
                    placeholder="Enter your email..."
                  />
                </label>
              </div>
            </div>
            <div class="flex flex-col gap-1">
              <label class="text-xl">Message</label>
              <textarea
                name="message"
                class="textarea textarea-bordered h-full w-full resize-none"
                placeholder="I want to know more about..."></textarea>
            </div>
          </div>
          <button type="submit" class="btn-accent btn w-fit ml-auto"
            >Submit</button
          >
        </form>
      </div>
    </div>
  </section>
</Layout>

<script>
  import L from "leaflet";
  var map = L.map("map").setView([-36.85, 174.74], 15);

  L.marker([-36.85, 174.74]).addTo(map);

  L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
    attribution:
      '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
  }).addTo(map);
</script>
